<h1>Recent posts</h1>

<% @posts.each do |post| %>
<div class="container">
  <%= render :partial => post%>

  <%= link_to 'Edit', edit_post_path(post) %>
  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
<% end %>
<br />
<%= link_to 'New Post', new_post_path %>